@model IEnumerable<InAndOut.Models.Item>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Borrowed Item List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Item" asp-action="Create" class="btn btn-primary">Create New Item</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Item Name
                    </th>
                    <th>
                        Borrower
                    </th>
                    <th>
                        Lender
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Item in Model)
                {
                    <tr>
                        <td width="23%">@Item.ItemName</td>
                        <td width="23%">@Item.Borrower</td>
                        <td width="23%">@Item.Lender</td>
                        <td width="21%">
                            <div class="w-100 btn-group">
                                <a asp-controller="Item" asp-action="Update" asp-route-Id="@Item.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="Item" asp-action="Delete" asp-route-Id="@Item.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Item created yet.</p>
    }
</div>